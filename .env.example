# ===========================================
# WhatsApp API - Environment Configuration
# ===========================================

# Application Settings
NODE_ENV=development
PORT=3000
API_VERSION=v1
APP_NAME=WhatsApp API

# Database Configuration
MONGO_URI=mongodb://localhost:27017/whatsapp_api
MONGO_DB_NAME=whatsapp_api

# Redis Configuration (Optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Authentication & Security
JWT_SECRET=your-super-secure-jwt-secret-key-min-32-chars
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-key-min-32-chars
JWT_REFRESH_EXPIRES_IN=30d
ENCRYPTION_KEY=your-32-character-encryption-key
BCRYPT_ROUNDS=12

# WhatsApp Provider Configuration
WHATSAPP_PROVIDER=baileys

# WhatsApp Cloud API (Meta) - Optional
WHATSAPP_CLOUD_TOKEN=your-meta-cloud-api-token
WHATSAPP_CLOUD_PHONE_ID=your-phone-number-id
WHATSAPP_CLOUD_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token
WHATSAPP_CLOUD_BUSINESS_ID=your-business-account-id

# Twilio Configuration - Optional
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_WHATSAPP_NUMBER=whatsapp:+1234567890

# Session Management
MAX_SESSIONS=100
SESSION_TIMEOUT=1800000
QR_TIMEOUT=300000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# File Upload & Storage
MAX_FILE_SIZE=104857600
UPLOAD_PATH=./uploads
STORAGE_PROVIDER=local

# AWS S3 Configuration - Optional
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary Configuration - Optional
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true

# CORS Configuration
CORS_ORIGIN=*

# Security Settings
HELMET_ENABLED=true
TRUST_PROXY=false

# Development Settings
SWAGGER_ENABLED=true
DEBUG_ENABLED=false

# Health Check
HEALTH_CHECK_INTERVAL=60000

# Webhook Configuration
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=5000
