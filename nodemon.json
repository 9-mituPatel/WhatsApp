{
  "watch": [
    "src/**/*",
    "app.js",
    "package.json"
  ],
  "ignore": [
    "sessions/**/*",
    "logs/**/*",
    "node_modules/**/*",
    "*.log",
    "**.log"
  ],
  "ext": "js,json",
  "exec": "node --max-old-space-size=4096 app.js",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 2000
}
